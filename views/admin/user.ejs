<!doctype html>
<html lang="en">

<head>
        <title>Oculux Job | Dashboard</title
    <% include component/header %>

</head>
<body class="theme-orange font-montserrat">

<!-- Page Loader -->
<div class="page-loader-wrapper">
    <div class="loader">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
        <div class="bar4"></div>
        <div class="bar5"></div>
    </div>
</div>
<!-- Overlay For Sidebars -->
<div class="overlay"></div>
<div id="wrapper">
    <% include component/navbar %>
    <% include component/leftbar %>
    <div id="main-content">
                    <div class="container-fluid">
                            <div class="row clearfix">
                                    <div class="col-lg-12   col-md-12 col-sm-12">
                                        <form method="POST" action="user/update">
                                        <div class="card">
                                            <div class="body">
                                                <div class="row clearfix">
                                                    <div class="col-sm-12   ">
                                                        <div class="form-group">
                                                            <input type="text" minlength="11"  required class="form-control" name="useridentify" placeholder="TC kimlik no">
                                                        </div>
                                                    </div>
                                                
                                                </div>
                                                <div class="row clearfix">
                                                    
                                                    <div class="col-sm-12">
                                                        <div class="form-group mt-3">
                                                                <select required name="siteid" class="form-control show-tick">
                                                                        <option value="">- SİTELER -</option>
                                                                        <% Site.forEach(function(Site){ %>
                                                                        <option value="<%=Site.id %>"><%=Site.name %></option>
                                                                        <% }); %>
                                                                    </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-12">
                                                        <button type="submit" class="btn btn-primary">Kayıt et</button>
                                                        <button type="reset" class="btn btn-outline-secondary">Sıfırla</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    </div>
                                </div>
                        <div class="row clearfix">
                            <div class="col-lg-12 col-md-12">
                                <div class="table-responsive">
                                    <table class="table table-hover table-custom spacing8">
                                        <thead>
                                            <tr> 
                                                <th>#</th>
                                                <th>İSİM</th>
                                                <th>EMAİL</th>
                                                <th>SİTE</th>
                                                <th>İŞLEM</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                                <% Site.forEach(function(Site){ %>
                                                    <tr>
                                                    
                                                        <td>
                                                            <div>#</div>
                                                        </td>
                                                        <td>
                                                            <%=Site["user.name"] %>
                                                        </td>
                                                        <td>
                                                            <div>
                                                                <%=Site["user.email"] %>
                                                            </div>
                                                        </td>
                                                        <td>
                                                                <div>
                                                                    <%=Site.name %>
                                                                </div>
                                                            </td>
                                                        <td>
                                                            <button type="button"  id="update" class="btn btn-default btn-sm" title="Edit" data-id="<%=Site.id %>" data-toggle="modal" data-target=".new-project-modal">
                                                                <i class="fa fa-pencil"></i>
                                                            </button>
                                                           
                                                        </td>
                                                    </tr>
                                                  <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>               
    </div>
</div>


<% include component/script %>
</body>
</html>

